<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray"
    tools:context=".MainActivity"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="Dungeons And Dragons"
        android:textColor="@color/orange"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/anao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AnÃ£o"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"
                android:background="@drawable/bg_button_disabled"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="20dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/elfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elfo"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"
                android:background="@drawable/bg_button_disabled"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="20dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gnomo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gnomo"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"
                android:background="@drawable/bg_button_disabled"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="20dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/humano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humano"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"
                android:background="@drawable/bg_button_disabled"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="20dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/meioelfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meio-Elfo"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"
                android:background="@drawable/bg_button_disabled"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="20dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/orc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orc"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"
                android:background="@drawable/bg_button_disabled"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="20dp"
                />

        </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <EditText
        android:id="@+id/name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Coloque seu nome"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_name_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_button_enabled" />




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAtributos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        />





</LinearLayout>