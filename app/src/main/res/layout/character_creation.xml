<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="50dp"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:text="Criação de Personagem"
            android:textColor="@color/orange"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Força:"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/forca_valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btSub_forca"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_menosum"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_button_enabled"/>

            <ImageButton
                android:id="@+id/btAdd_forca"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_maisum"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_button_enabled"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destreza:"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/destreza_valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btSub_destreza"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_menosum"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_button_enabled"/>

            <ImageButton
                android:id="@+id/btAdd_destreza"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_maisum"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_button_enabled"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Constituição:"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/constituicao_valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btSub_constituicao"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_menosum"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_button_enabled"/>

            <ImageButton
                android:id="@+id/btAdd_constituicao"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_maisum"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_button_enabled"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sabedoria:"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/sabedoria_valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btSub_sabedoria"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_menosum"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_button_enabled"/>

            <ImageButton
                android:id="@+id/btAdd_sabedoria"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_maisum"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_button_enabled"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inteligência:"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/inteligencia_valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btSub_inteligencia"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_menosum"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_button_enabled"/>

            <ImageButton
                android:id="@+id/btAdd_inteligencia"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_maisum"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_button_enabled"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carisma:"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/carisma_valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btSub_carisma"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_menosum"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_button_enabled"/>

            <ImageButton
                android:id="@+id/btAdd_carisma"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_maisum"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_button_enabled"/>


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="275dp"
        android:background="@drawable/bg_button_enabled"
        android:text="Continue" />

</androidx.cardview.widget.CardView>